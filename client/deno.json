{
  "tasks": {
    "build": "deno run -A npm:typescript/tsc -p tsconfig.json",
    "dev": "deno run -A npm:typescript/tsc -p tsconfig.json --watch",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "check": "deno check src/**/*.ts"
  },
  "lint": {
    "include": ["src/"]
  },
  "fmt": {
    "include": ["src/"],
    "lineWidth": 100,
    "singleQuote": true
  }
}
